{
  "name": "graphql-scalars",
  "version": "0.4.8",
  "description": "A collection of scalar types not included in base GraphQL.",
  "repository": {
    "type": "git",
    "url": "https://github.com/Urigo/graphql-scalars.git"
  },
  "sideEffects": false,
  "main": "dist/commonjs/index.js",
  "module": "dist/esnext/index.js",
  "typings": "dist/esnext/index.d.ts",
  "typescript": {
    "definition": "dist/esnext/index.d.ts"
  },
  "license": "MIT",
  "jest": {
    "roots": [
      "src"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "printWidth": 80
  },
  "scripts": {
    "clean": "rm -rf dist",
    "prebuild": "yarn clean",
    "build": "tsc -m esnext --outDir dist/esnext && tsc -m commonjs --outDir dist/commonjs",
    "test": "jest --forceExit --runInBand && yarn bundlesize",
    "prepare-release": "yarn build && yarn test",
    "release": "yarn prepare-release && npm publish",
    "ci:release:canary": "node bump.js && npm publish --tag alpha --access public",
    "bundlesize": "yarn build && cd bundle-test/ && yarn && yarn test"
  },
  "devDependencies": {
    "@types/graphql": "14.2.3",
    "@types/hapi__joi": "15.0.3",
    "@types/jest": "24.0.17",
    "graphql": "14.4.2",
    "jest": "24.8.0",
    "lint-staged": "9.2.1",
    "semver": "6.3.0",
    "ts-jest": "24.0.2",
    "tslint": "5.18.0",
    "typescript": "3.5.3"
  },
  "peerDependencies": {
    "graphql": "^0.8.0 || ^0.9.0 || ^0.10.0 || ^0.11.0 || ^0.12.0 || ^0.13.0 || ^14.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "tslint --fix",
      "git add"
    ],
    "*.{js,json,css,md,ts,tsx}": [
      "prettier --write",
      "git add -f"
    ]
  },
  "dependencies": {
    "@hapi/joi": "15.1.0",
    "graphql-currency-scalars": "0.0.1",
    "graphql-type-json": "0.3.0",
    "libphonenumber-js": "1.7.22"
  }
}
